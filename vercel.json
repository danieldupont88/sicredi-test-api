{
    "name": "sicredi-bff",
    "version": 2,
    "env": {
        "MONGODB_URI": "@mongo-db-uri"
    },
    "routes": [
        {
            "src": "/",
            "dest": "/api/simulations.ts"
        },
        {
            "src": "/simulations",
            "methods": ["POST", "GET"],
            "dest": "/api/simulations.ts"
        },
        {   "src": "/simulations/(?<id>[^/]*)",
            "methods": ["PUT", "GET"],
            "dest": "/api/simulations.ts?id=$id"
        },
        {
            "src": "/simulations/(.*)",
            "methods": ["PUT", "GET"],
            "dest": "/api/simulations.ts"
        },
        {
            "src": "/auth",
            "methods": ["POST"],
            "dest": "/api/auth.ts"
        }
    ]
}